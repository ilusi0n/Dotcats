[misc]
font                  = "Terminus-8.5"
#font                = "envy code r:medium:size=8.5" 
raisefocus            = true
focus_follow_mouse    = true
focus_follow_movement = false
opacity               = 255

# focus_pointer_click: click on unfocused client area:
# true  -- default, set focus
# false -- click go to client; including dockapps
focus_pointer_click = true
status_timing      = 3     #seconds
status_path       = "~/.config/wmfs/wmfs_status"
[/misc]

[bar]
        bg     = "#000000"
        fg     = "#D4D4D4"
        border = false
        #height = "-1"

        light_shade =  0.10
        dark_shade  = -0.10

        [mouse] button = "4" func = "spawn" cmd = "amixer set Master 5%+"    [/mouse]
        [mouse] button = "5" func = "spawn" cmd = "amixer set Master 5%-"    [/mouse]

        [systray]
            # Enable/disable systray
            active = true

            # Screen of systray
            screen = 0

            # Spacing between tray icons
            spacing = 1
        [/systray]

        # Remove this section to disable the selbar.
        [selbar]
            bg = "#000000"
            fg = "#00BFFF"

            # Cut title length
            max_length = 40

            [mouse] button = "3" func = "clientlist"  [/mouse]
            [mouse] button = "4" func = "client_next" [/mouse]
            [mouse] button = "5" func = "client_prev" [/mouse]
        [/selbar]

[/bar]

[layouts]
