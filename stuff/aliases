#---------#
# Aliases #
#---------#

SCRIPTS_DIR="$HOME/.scripts"

alias rollback="git --hard HEAD"
alias logX='journalctl -k -b -1'
alias getsub='subberthehut -s -a -o -l por,pob'
alias verynice="ionice -c3 nice -n 15"
alias buildme="ionice -c3 nice -n 15 makepkg -s"
alias good='schedtool -D -n 19 -e'
alias rm='trash-put'
alias flux='xflux -l 38.44 -g 9.9'
alias grep='grep --color=auto'
alias ls="ls --color -F"
alias ll="ls --color -lh"
alias sudo='sudo '
alias ls='ls --color=auto'
alias cacheclean='pkgcacheclean 2'
alias halt='systemctl poweroff'
alias sup='systemctl suspend'
alias reboot='systemctl reboot'
alias burniso='cdrecord -v dev=/dev/scd0'
alias music='ncmpcpp'
alias check='chkrootkit'
alias checkme='rkhunter --update -c'
alias cleanChromium='profile-cleaner c'
alias fail='systemctl --failed'
alias services='systemctl list-unit-files | grep enabled'
alias size='du -sh $1'
alias reflector='reflector -l 5 --sort rate -p http --save /etc/pacman.d/mirrorlist'
alias updateXresources='xrdb ~/.Xresources'
alias checkMemoryLeak='valgrind --tool=memcheck'
alias checkLua='luac -p $1'
alias redwm='/home/ilusi0n/.scripts/dwmMake.sh'
alias zombies='ps -el | grep 'Z''
alias top='htop'
alias lazyScript='/home/ilusi0n/.dotfiles/lazyScript.sh'
alias wasteSpace='ncdu'
alias myAge=" echo $(($(($(date +%s) - $(date -d "$(head -1 /var/log/pacman.log | cut -d ' ' -f 1,2 | tr -d '[]')" +%s))) / 86400)) days"
alias suzie='sudo pacman -Sy; sudo pacman -S linux-headers linux-zen-headers linux-lts-headers --needed; sudo pacman -Su'
alias myip="curl curlmyip.com"
alias cower="cower -t ~/build -c"
alias pk='killall -9 $1'
start() { sudo systemctl start $1.service ; sudo systemctl status $1.service; }
restart() { sudo systemctl restart $1.service ; sudo systemctl status $1.service; }
stop() { sudo systemctl stop $1.service ; sudo systemctl status $1.service; }
status() { sudo systemctl status $1.service; }
enable() { sudo systemctl enable $1.service ; }
disable() { sudo systemctl disable $1.service ; }
listd() { ls -l /etc/systemd/system/multi-user.target.wants; }
start_user() { systemctl --user start $1.service; }
restart_user() { systemctl --user restart $1.service; }
stop_user() { systemctl --user stop $1.service; }
status_user() { systemctl --user status $1.service; }
enable_user() { systemctl --user enable $1.service; }
disable_user() { systemctl --user disable $1.service; }
alias cpuspeed='watch grep \"cpu MHz\" /proc/cpuinfo'
alias scheduler="sudo tee /sys/block/sda/queue/scheduler <<< $1"
alias no_turbo="sudo tee /sys/devices/system/cpu/intel_pstate/no_turbo <<< $1"
alias tmpfs="sudo mount -t tmpfs -o defaults,noatime,mode=1777 tmpfs $1"
